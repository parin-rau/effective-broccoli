// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  userId String @unique @id
  username String @unique
  password String
  passwordSalt String
  timestamp BigInt
  projects Project[]
  tasks Task[]
  subtasks Subtask[]
}

model Project {
  projectId String @unique @id
  user User @relation(fields: [userId], references: [userId])
  userId String
  title String
  description String?
  onHold Boolean @default(false)
  externalLink String?
  timestamp BigInt
  tasks Task[]
  subtasks Subtask[]
}

model Task {
  taskId String @unique @id
  user User @relation(fields: [userId], references: [userId])
  userId String
  project Project @relation(fields: [projectId], references: [projectId])
  projectId String
  title String
  description String?
  onHold Boolean @default(false)
  priority Int @default(0)
  due String?
  externalLink String?
  timestamp BigInt
  subtasks Subtask[]
}

model Subtask {
  subtaskId String @unique @id
  user User @relation(fields: [userId], references: [userId])
  userId String
  project Project @relation(fields: [projectId], references: [projectId])
  projectId String
  task Task @relation(fields: [taskId], references: [taskId])
  taskId String
  title String
  description String?
  progress Int @default(0)
  externalLink String?
  timestamp BigInt
}

